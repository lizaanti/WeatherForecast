<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkSky"
    tools:context=".MainActivity">

    <ProgressBar
        android:id="@+id/Loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/HomePage"
        android:visibility="visible">

        <ImageView
            android:id="@+id/IVBack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/darkSky" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Название города"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:padding="20dp"
            android:textSize="18sp"
            android:id="@+id/CityNameTV"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/line1"
            android:layout_below="@+id/CityNameTV"
            android:weightSum="5">
            <SearchView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SearchView"
                android:importantForAutofill="no"
                android:inputType="text"
                android:backgroundTint="@android:color/transparent"/>
        </LinearLayout>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/toKnowWeather"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:text="Найти"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_below="@id/line1"/>
        <TextView
            android:id="@+id/Temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/toKnowWeather"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="70dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ViewIcon"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Temperature"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ConditionTV"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_below="@+id/ViewIcon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginBottom="10dp"
            android:text="Погода на сегодня"
            android:layout_above="@+id/RVWeather"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RVWeather"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">
        </androidx.recyclerview.widget.RecyclerView>

    </RelativeLayout>
</RelativeLayout>